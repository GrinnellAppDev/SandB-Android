<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/articleThumb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="article thumb"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/sandblogo_a2" />

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="12dp"
                android:background="@color/gmdarkred"
                android:elevation="4dp"
                android:paddingBottom="1dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="1dp"
                android:text="CATEGORY"
                android:textAllCaps="true"
                android:textColor="@color/gcream"
                android:textSize="12sp"
                android:textStyle="bold" />
        </FrameLayout>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical"
            android:text="The Title Text Goes Here"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gmdarkred" />

        <!--<TextView-->
        <!--android:id="@+id/descriptionText"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:fontFamily="sans-serif-light"-->
        <!--android:paddingTop="6dp"-->
        <!--android:text="This is the Description Text." />-->


    </LinearLayout>
</android.support.v7.widget.CardView>