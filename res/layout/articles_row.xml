<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/pad5" 
    android:paddingRight="@dimen/pad5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gmdarkred" />

        <TextView
            android:id="@+id/pubdateText"
            android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/empty"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/pad3" />

    </RelativeLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/pad3"
            android:paddingLeft="2dp" >

            <ImageView
                android:id="@+id/articleThumb"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginBottom="@dimen/pad3"
                android:layout_marginRight="10dp"
                android:contentDescription="article thumb"
                android:scaleType="fitCenter"
                
                />

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                 />

        </LinearLayout>      
</LinearLayout>