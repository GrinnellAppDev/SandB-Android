<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gcream"
    android:orientation="vertical"
    android:paddingLeft="@dimen/pad5"
    android:paddingRight="@dimen/pad5"
    tools:context=".ArticleDetailFragment" >

    <TextView
        android:id="@+id/article_title"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/pad3"
        android:paddingTop="@dimen/pad3"
        android:textColor="@color/gmdarkred"
        android:textIsSelectable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad1"
        android:background="@android:color/darker_gray" >
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/articleImage1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/article_image"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/article_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:textColor="@android:color/black"
                android:textIsSelectable="true" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>