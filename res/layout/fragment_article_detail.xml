<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gcream"
    android:orientation="vertical"
    tools:context=".ArticleDetailFragment" >

    <TextView
        android:id="@+id/article_title"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="@dimen/pad3"
        android:paddingLeft="@dimen/pad5"
        android:paddingRight="@dimen/pad5"
        android:paddingTop="@dimen/pad3"
        android:textColor="@color/gmdarkred"
        android:textIsSelectable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad1"
        android:background="@android:color/darker_gray" >
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1" >

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/article_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="right"
                        android:paddingLeft="25dip"
                        android:textColor="@android:color/black"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/article_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="right"
                        android:paddingRight="35dip"
                        android:textColor="@android:color/black"
                        android:textIsSelectable="true" />
                </TableRow>
            </TableLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#C0C0C0" />

            <LinearLayout 
                android:id="@+id/article_body_group"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                
            </LinearLayout>       

        </LinearLayout>
    </ScrollView>

</LinearLayout>